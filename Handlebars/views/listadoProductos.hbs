<h2 style="color:blue;">Listado de productos</h2>
<button class="btn btn-secundary mt-3 mb-5"><a href="/">Ingresar un producto</a></button>
<br>
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: yellow;"> <th>ID</th> <th>Titulo</th> <th>Precio</th> <th>Imagen</th></tr>
        <ul>
            {{#each productos}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td><img src="{{this.thumbnail}}" height="150px" width="200px" alt="Imagen no disponible"></td>
                </tr>
            {{else}}
                <tr>
                    <td>No hay productos</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                </tr>
            {{/each}}
        </ul>
    </table>
</div>
